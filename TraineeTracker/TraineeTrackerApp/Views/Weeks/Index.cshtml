@model IEnumerable<TraineeTrackerApp.Models.Week>

@{
    ViewData["Title"] = "Index";
}
<div class="mt-auto mb-auto">
    <h1>Index</h1>

<p>
        <a asp-action="Create" class="btn spartapink indexBtn">Create New</a>
</p>
   
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.WeekStart)
            </th>          
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.WeekStart)
                </td>
                <td class="text-end">
                    <div>                        
                        <a class="btn spartapink indexBtn" asp-action="Details" asp-route-id="@item.Id">Details</a>
                        <a class="btn spartapink indexBtn" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                            <a class="btn spartapink indexBtn indexBtnDanger" data-bs-toggle="modal" data-bs-target="#exampleModal">Delete</a>
                    </div>
                </td>
            </tr>
                <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h1 class="modal-title fs-5" id="exampleModalLabel">Are you sure you want to delete this week?</h1>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                <form asp-action="Delete" asp-route-id="@item.Id">
                                    <input type="submit" value="Delete" class="btn spartapink indexBtn indexBtnDanger" />
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
        }
    </tbody>
</table>
</div>
